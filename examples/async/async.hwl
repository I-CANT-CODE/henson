# Run via mpirun -n 4 .../henson intercomm.hwl

sim = ../simple/simulation $size(250) $iter(10) $sim_sleep(1)       # 10 iterations, sleep=1
snd = ./send-async
rcv = ./receive-async
ana = ../simple/analysis $ana_sleep(3)                              # sleep=3

producer while sim:
	sim
	snd

consumer while rcv:
	rcv
	ana
