# Run via mpirun -n 4 .../henson intercomm.hwl

sim = ../simple/simulation 250 10 1     # 10 iterations, sleep=1
snd = ./send-async
rcv = ./receive-async
ana = ../simple/analysis 3      # sleep=3

producer:
	sim
	snd

consumer:
	rcv
	ana

control sim         # run producer until sim stops
control rcv         # run consumer until rcv stops
